<Window x:Class="DictionaryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryApp"
        mc:Ignorable="d"
        Title="Dictionary Manager" Height="700" Width="900">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="RoyalBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkSlateBlue"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="MediumSlateBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="Gainsboro"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Ліва секція з виводом і операціями над словниками -->
        <GroupBox Header="Словники" Grid.Column="0" Margin="5">
            <DockPanel>
                <DataGrid x:Name="DictsGrid" DockPanel.Dock="Top" AutoGenerateColumns="False" Height="300" SelectionMode="Single" SelectionChanged="DictsGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="dict id" Binding="{Binding DictId}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="parent id" Binding="{Binding ParentId}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Назва:" />
                    <TextBox x:Name="TxtDictName" />
                    <TextBlock Text="Код:" Margin="0,6,0,0"/>
                    <TextBox x:Name="TxtDictCode" />
                    <TextBlock Text="Опис:" Margin="0,6,0,0"/>
                    <TextBox x:Name="TxtDictDesc" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                    <TextBlock Text="ParentId(необов'язково):" Margin="0,6,0,0"/>
                    <TextBox x:Name="TxtDictParentId" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                        <Button x:Name="BtnAddDict" Click="BtnAddDict_Click" Width="80" Margin="0,0,6,0">Створити</Button>
                        <Button x:Name="BtnUpdateDict" Click="BtnUpdateDict_Click" Width="80" Margin="0,0,6,0">Оновити</Button>
                        <Button x:Name="BtnDeleteDict" Click="BtnDeleteDict_Click" Width="80" Margin="0,0,6,0">Видалити</Button>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </GroupBox>

        <!-- Елементи словника -->
        <GroupBox Header="Елементи словника" Grid.Column="1" Margin="5">
            <DockPanel>
                <DataGrid x:Name="ItemsGrid" DockPanel.Dock="Top" AutoGenerateColumns="False" Height="300" SelectionMode="Single" SelectionChanged="ItemsGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="item id" Binding="{Binding ItemId}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="dict id" Binding="{Binding DictId}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="120"/>
                        <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Код:" />
                    <TextBox x:Name="TxtItemCode" />
                    <TextBlock Text="Назва:" Margin="0,6,0,0"/>
                    <TextBox x:Name="TxtItemName" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                        <Button x:Name="BtnAddItem" Click="BtnAddItem_Click" Width="80" Margin="0,0,6,0">Додати</Button>
                        <Button x:Name="BtnUpdateItem" Click="BtnUpdateItem_Click" Width="80" Margin="0,0,6,0">Оновити</Button>
                        <Button x:Name="BtnDeleteItem" Click="BtnDeleteItem_Click" Width="80" Margin="0,0,6,0">Видалити</Button>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
